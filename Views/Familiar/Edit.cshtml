@model ORTSocial.Models.Familiar

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center mt-5">Editar Familiar</h1>
<hr />

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-6">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="IdFamiliar" />
                <div class="form-group mb-3">
                    <label asp-for="Dni" class="control-label"></label>
                    <input asp-for="Dni" class="form-control" />
                    <span asp-validation-for="Dni" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Nombre" class="control-label"></label>
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Apellido" class="control-label"></label>
                    <input asp-for="Apellido" class="form-control" />
                    <span asp-validation-for="Apellido" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="IdGrupoFamiliar" class="control-label">Grupo Familiar</label>
                    <select asp-for="IdGrupoFamiliar" class="form-control" asp-items="ViewBag.IdGrupoFamiliar"></select>
                    <span asp-validation-for="IdGrupoFamiliar" class="text-danger"></span>
                </div>
                <div class="d-flex justify-content-between mt-40">
                    <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
                    <input type="submit" value="Guardar" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
