@model IEnumerable<ORTSocial.Models.GrupoFamiliar>

@{
    ViewData["Title"] = "Index";
}

<h1>Grupos Familiares</h1>

<p>
    <a asp-action="Create">Crear nuevo Grupo Familiar</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cantidad)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cantidad)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdGrupoFamiliar">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.IdGrupoFamiliar">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.IdGrupoFamiliar">Borrar</a>
            </td>
        </tr>
}
    </tbody>
</table>
