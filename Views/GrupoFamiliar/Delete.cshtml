@model ORTSocial.Models.GrupoFamiliar

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-center mt-5">Borrar Grupo Familiar</h1>
<hr />


<div class="container mt-5">
    <div class="d-flex flex-column align-items-between justify-content-between vh-80">
        <div class="alert alert-danger" role="alert">¿Estás seguro que quieres borrar esto?</div>
        <div class="row">
            <dt class="col-sm-6 pl-350">
                @Html.DisplayNameFor(model => model.Nombre)
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.Nombre)
            </dd>
        </div>
        <div class="row">
            <dt class="col-sm-6 pl-350">
                @Html.DisplayNameFor(model => model.Cantidad)
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.Cantidad)
            </dd>
        </div>
        <form asp-action="Delete">
            <div class="d-flex justify-content-center mt-40">
                <input type="hidden" asp-for="IdGrupoFamiliar" />
                <a asp-action="Index" class="btn btn-secondary mr-200">Volver a la lista</a>
                <input type="submit" value="Borrar" class="btn btn-danger ml-200" />
                
            </div>
        </form>
    </div>
    
    
</div>
