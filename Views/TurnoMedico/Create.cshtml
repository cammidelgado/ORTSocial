@model ORTSocial.Models.TurnoMedico

@{
    ViewData["Title"] = "Create";
}

<h1>Crear</h1>

<h4>Turno Médico</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Fecha" class="control-label"></label>
                <input asp-for="Fecha" class="form-control" />
                <span asp-validation-for="Fecha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdSocio" class="control-label"></label>
                <select asp-for="IdSocio" class="form-control" asp-items="ViewBag.IdSocio"></select>
            </div>
            <div class="form-group">
                <label asp-for="IdMedico" class="control-label"></label>
                <select asp-for="IdMedico" class ="form-control" asp-items="ViewBag.IdMedico"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<script>
    document.getElementById("IdSocio").addEventListener("change", function () {
        var selectedSocioId = this.value;
        $.ajax({
            url: "/TurnoMedico/GetMedicosBySocio",
            type: "GET",
            data: { idSocio: selectedSocioId },
            success: function (data) {
                $("#IdMedico").empty();
                $.each(data, function (index, item) {
                    $("#IdMedico").append($('<option>', {
                        value: item.value,
                        text: item.especialidad
                    }));
                });
            }
        });
    });
</script>

<div>
    <a asp-action="Index">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
